<%- include('partials/header') %>

<div class="container">
	<h1 class="text-center">Add a New Country Deatil</h1>
	
	<form name="addCountryDetail"action='/countries' method="POST" style="width: 30%;" class="mx-auto">
		<div class="form-group">
			<label for="name">Name</label>
			<input type="text" class="form-control" type='text' name='name' minlength="3" maxlength="20" pattern="^[( )a-zA-Z]+$" placeholder='Country' required>
		</div>
		<div class="form-group">
			<label for="nameContinent">Continent</label>
			<input type="text" class="form-control" type='text' name='continent' placeholder='Continent'>
		</div>
		<div class="input-group mb-3">
		<div class="custom-file">
			<input type="file" name="flag" accept="image/*" class="custom-file-input" id="image" aria-describedby="inputGroupFileAddon01"
			  required>
			<div class="invalid-feedback">
			  Please upload an image.
			</div>
			<label class="custom-file-label" for="inputGroupFile01">Image*</label>
		  </div>
		</div>  
		<div class="form-group">
			<label for="rank">Rank</label>
			<input type="number" class="form-control" type='text' name='rank' placeholder='Rank'>
		</div>
		<div class="form-group">
			<button  type="Submit" class="btn btn-success btn-block">Submit</button>
		</div>
		<a href="/countries">Go Back</a>
	</form>
</div>

<%- include('partials/footer') %>

